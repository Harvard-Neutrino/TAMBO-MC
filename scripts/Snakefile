def get_particle_ids(wildcards):
    with h5py.File(f"/n/holylfs05/LABS/arguelles_delgado_lab/Lab/TAMBO/will_misc/{wildcards.injection_config}/{wildcards.injection_config}_{wildcards.injection_simset}_{wildcards.injection_subsimset}.jld2") as f:
        particle_ids = f["corsika_indices"][:]
        return list(np.array([particle_ids['1'], particle_ids['2']]).T) # Yikes

